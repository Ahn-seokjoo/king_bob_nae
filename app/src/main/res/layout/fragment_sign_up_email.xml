<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tv_sign_up_email"
            style="@style/Headline1_Regular"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="92dp"
            android:text="@string/sign_up_email_text"
            android:textColor="@color/brown_gray_500"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tf_sign_up_check_certification"
            style="@style/EditTextStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="36dp"
            android:layout_marginEnd="24dp"
            android:theme="@style/EditTextStyle"
            app:endIconDrawable="@drawable/ic_correct_20"
            app:endIconMode="custom"
            app:endIconTint="@color/transparent"
            app:endIconTintMode="screen"
            app:errorEnabled="true"
            app:errorIconDrawable="@drawable/ic_error_20"
            app:helperText="@string/sign_up_input_email_helper"
            app:helperTextEnabled="true"
            app:helperTextTextAppearance="@style/Caption_Regular"
            app:helperTextTextColor="@color/brown_gray_400"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_sign_up_email">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_check_certification_input"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="@string/sign_up_input_email_hint"
                android:inputType="textEmailAddress"
                android:maxLines="1"
                android:paddingBottom="20dp" />

        </com.google.android.material.textfield.TextInputLayout>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_sign_up_email_next"
            style="@style/Body1_Bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:layout_marginBottom="30dp"
            android:background="@drawable/radius_gray"
            android:clickable="true"
            android:stateListAnimator="@null"
            android:text="@string/next"
            android:textColor="@color/brown_gray_300"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <ImageView
            android:id="@+id/btn_sign_up_email_back"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginStart="4dp"
            android:layout_marginTop="2dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_back_48" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>